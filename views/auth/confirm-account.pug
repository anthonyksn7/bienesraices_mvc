extends ../layout/index

block content
    div(class="py-10")
        h1(class="text-4xl text-center font-extrabold my-10") Bienes
            span.font-normal Raices
        h2.text-2xl.text-center.font-extrabold= title

    div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto")
        p(class= error ? 'bg-red-500' : 'bg-green-500').py-2.px-5.rounded-lg.w-full.text-white.text-center.font-bold.uppercase= message

        if !error
          a(href="/auth/login" class="text-center font-bold test-sm text-slate-600 uppercase mt-10 block") You Can Now Log In
